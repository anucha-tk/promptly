rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // กฎสำหรับ Bookings: เฉพาะเจ้าของ (clientUid) หรือ Provider ที่เกี่ยวข้องเท่านั้นที่อ่านได้
    match /bookings/{bookingId} {
      allow read, write: if request.auth != null && (
        request.auth.uid == resource.data.clientUid ||
        request.auth.uid == request.resource.data.clientUid
      );
    }

    // กฎสำหรับ Providers: ทุกคนอ่านได้ แต่แก้ไขไม่ได้ (ยกเว้น Admin ผ่าน SDK)
    match /providers/{providerId} {
      allow read: if request.auth != null;
      allow write: if false; // เขียนผ่าน Admin SDK เท่านั้น
    }

    // Availability slots: อ่านได้เมื่อล็อกอิน; เขียนผ่าน Admin SDK เท่านั้น (หรือ provider ในอนาคต)
    match /availability/{slotId} {
      allow read: if request.auth != null;
      allow write: if false;
    }
  }
}
